<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <corners android:radius="32dp" />
        <stroke android:width="1dip" android:color="#6abfb1" />
        <gradient android:angle="-90" android:startColor="#6abfb1" android:endColor="#6abfb1"  />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle"  >
        <corners android:radius="32dp" />
        <stroke android:width="1dip" android:color="#6abfb1" />
        <solid android:color="#6abfb1"/>
    </shape>
</item>
<item >
    <shape android:shape="rectangle"  >
        <corners android:radius="32dp" />
        <stroke android:width="0.5dip" android:color="#6abfb1" />
        <gradient android:angle="-90" android:startColor="#88d1c3" android:endColor="#6abfb1" />
    </shape>
</item>
</selector>